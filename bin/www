#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('Kriv_test:server');
var http = require('http');
var events = require('events');
var dateFormat = require('dateformat');

var CronJob = require('cron').CronJob;

var job;
job = new CronJob({
    cronTime: '00 52 12 * * 1-7',
    onTick: function () {

        /*
         * Runs every weekday (Monday through Friday)
         * at 12:13:00
         */

        //select date from scale1_log where date >= (CURDATE() - INTERVAL 1 DAY);
        var scale1 = [], scale2 = [];
        db_conn.query("select date from scale1_log where date >= (CURDATE() - INTERVAL 1 DAY) and state = 1", function (err, rows, fields) {
            rows.forEach(function (item) {
                scale1.push(dateFormat(item.date, 'HH:MM:ss'));
            });
        });
        db_conn.query("select date from scale2_log where date >= (CURDATE() - INTERVAL 1 DAY)  and state = 1", function (err, rows, fields) {
            rows.forEach(function (item) {
                scale2.push(dateFormat(item.date, 'HH:MM:ss'));
            });
        });

        var sheet_rows = 1;
        if (scale1.length > scale2.length) {
            sheet_rows = scale1.length + 1;
        } else {
            sheet_rows = scale2.length + 1;
        }

        var excelbuilder = require('msexcel-builder');
        // Create a new workbook file in current working-path
        var sheet_name = 'report_' + dateFormat(new Date(), 'dd_mm_yy') + '___' + dateFormat(new Date(), 'HH_MM') + '.xlsx';
        var workbook = excelbuilder.createWorkbook('../reports/', sheet_name);

        // Create a new worksheet with 10 columns and 12 rows
        var sheet1 = workbook.createSheet('sheet1', 2, sheet_rows);

        // Fill some data
        sheet1.set(1, 1, 'Scale 1');
        sheet1.set(2, 1, 'Scale 2');
        for (var i = 2; i < scale1.length; i++) {
            sheet1.set(1, i, scale1[i]);
        }
        for (var i = 2; i < scale2.length; i++) {
            sheet1.set(1, i, scale2[i]);
        }

        // Save it
        workbook.save(function (ok) {
            if (!ok)
                workbook.cancel();
            else
                console.log('congratulations, your workbook created');
        });

        var nodemailer = require('nodemailer');

        var transporter = nodemailer.createTransport({
            host: "mx1.agroimpex.com",
            secure: false,
            port: 25,
            tls: {
                rejectUnauthorized: false
            }
        });

        // setup e-mail data with unicode symbols
        var mailOptions = {
            from: '<mailbot@agroimpex.com>', // sender address
            to: '<d.krivitskiy@agroimpex.com>', // list of receivers
            subject: 'Node.js mail test', // Subject line
            text: 'Daily report', // plaintext body
            attachments: [
                {
                    path: '/var/www/html/zaslon/reports/'+sheet_name
                }
            ]
        };

        // send mail with defined transport object
        transporter.sendMail(mailOptions, function (error, info) {
            if (error) {
                return console.log(error);
            }
            console.log('Message sent: ' + info.response);
        });


        console.log("CRON!!!!!!!!!!!!!!!!!!!");
    },
    start: false
});
job.start();

