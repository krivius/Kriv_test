                 if(scale_1_arr.length > scale_2_arr.length){
                     sheet_rows = scale_1_arr.length + 1;
                 }else {
                     sheet_rows = scale_2_arr.length + 1;
                 }


                 var excelbuilder = require('msexcel-builder');
                 // Create a new workbook file in current working-path
